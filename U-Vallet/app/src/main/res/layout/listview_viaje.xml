<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/Driver_Name"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="#3F51B5"
        android:gravity="center"
        android:text="Nombre del Conductor"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="#4FB79FEF"
        android:orientation="horizontal">

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Origen : "
            android:textStyle="bold" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/Origin_Direction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Dirección de origen " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="#4FB79FEF"
        android:orientation="horizontal">

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Destino : "
            android:textStyle="bold" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/Destiny_Direction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Dirección de destino" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="#4FB79FEF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Carro :"
            android:textStyle="bold" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/Car_Brand"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="MARCA" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Placa : "
            android:textStyle="bold" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/Car_Plate"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="XYZ - 123" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:background="#4FB79FEF"
        android:gravity="center">

        <Button
            android:id="@+id/Button_Reserve_Trip"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Reservar viaje"
            android:textAllCaps="false"
            app:backgroundTint="@android:color/black" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/Button_See_Route"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Ver Ruta"
            android:textAllCaps="false"
            app:backgroundTint="@color/black" />

    </LinearLayout>

</LinearLayout>