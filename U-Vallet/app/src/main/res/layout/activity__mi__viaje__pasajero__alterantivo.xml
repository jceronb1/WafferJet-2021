<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Mi_Viaje_Pasajero_Alterantivo"
    android:background="@drawable/fondo">


    <TextView
        android:id="@+id/Uvallet"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="77dp"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:background="#000C0808"
        android:text="U Vallet"
        android:textColor="#3F51B5"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewMiViaje"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Uvallet"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="163dp"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="Mi Viaje"
        android:textColor="#050505"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/miViajeInformacion"
        android:layout_width="376dp"
        android:layout_height="182dp"
        android:layout_below="@+id/viewMiViaje"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17.5dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="17.5dp"
        android:layout_marginRight="16dp"
        android:background="#D5F5E3"
        android:text=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewMiViaje"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="45dp"
        android:text="Usted no tiene ningun viaje reservado"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>